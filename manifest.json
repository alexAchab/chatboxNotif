{
  "manifest_version": 3,
  "name": "ChatboxNotif",
  "version": "1.3.2",
  "description": "Chatbox FA : Notifications sonores et nouveaux messages.",
  "icons": {
    "48": "icons/chatboxNotif-icon.svg"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.ashes-arise.forumactif.com/chatbox/*"
      ],
      "js": [
        "scripts/chatboxNotif.js",
        "scripts/forceRefresh.js"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "chatboxnotif@gmail.com",
      "strict_min_version": "48.0"
    }
  }
}
